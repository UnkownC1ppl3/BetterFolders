<Window x:Class="BuilderApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Builder" Height="400" Width="600">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Folder Path:" />
            <TextBox x:Name="FolderPathTextBox" Margin="0,0,0,10" />

            <Button Content="Browse..." Click="BrowseFolder_Click" Margin="0,0,0,10"/>

            <TextBlock Text="Software Name:" />
            <TextBox x:Name="SoftwareNameTextBox" Margin="0,0,0,10" />

            <TextBlock Text="Icon Image:" />
            <TextBox x:Name="IconPathTextBox" Margin="0,0,0,10" />

            <Button Content="Browse..." Click="BrowseIcon_Click" Margin="0,0,0,10"/>

            <Button Content="Generate EXE" Click="GenerateExe_Click" Margin="0,20,0,0" />
        </StackPanel>
    </Grid>
</Window>
